<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="4.4"?>
<plugin>
	<extension point="org.eclipse.ui.editors.documentProviders">
    	<provider 
        	extensions="pec,poc,psc,pes,pos,pss" 
        	class="presto.editor.DocumentProvider" 
        	id="presto.editor.documentProvider"> 
    	</provider> 
	</extension>
 	<extension point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            describer="presto.editor.ContentDescriber"
            file-extensions="pec,poc,psc,pes,pos,pss"
            id="presto.content-type"
            name="Presto content type"
            priority="high">
      </content-type>
   </extension>
	<extension point="org.eclipse.ui.editors">
      <editor class="presto.editor.MultiPageEditor"
            contributorClass="presto.editor.MultiPageContributor"
            default="false"
            icon="images/src_obj.gif" 
            id="presto.editor"
            name="Presto Editor">
         <contentTypeBinding contentTypeId="presto.content-type"/>
      </editor>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="presto.editor.prefs.Initializer">
      </initializer>
   </extension>
    <extension
      point = "org.eclipse.ui.preferencePages">
      <page
         id="presto.prefs.root"
         class="presto.editor.prefs.RootPage"
         name="Presto">
      </page>
      <page
         id="presto.prefs.editor"
         class="presto.editor.prefs.EditorPage"
         name="Editor"
         category="presto.prefs.root">
      </page>
      <page
         id="presto.prefs.coloring"
         class="presto.editor.prefs.ColoringPage"
         name="Syntax coloring"
         category="presto.prefs.editor">
      </page>
   </extension>  
   <extension point="org.eclipse.core.runtime.adapters">
		<factory
    		class="presto.editor.debug.BreakpointAdapterFactory"
       		adaptableType="presto.editor.SourceEditor">
       		<adapter type="org.eclipse.debug.ui.actions.IToggleBreakpointsTarget"/>
    	</factory>
   </extension>
